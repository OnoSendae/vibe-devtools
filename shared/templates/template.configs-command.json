{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Commands Index Configuration",
    "description": "Template for indexing all available commands in the system",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "description": "Version of this configuration file",
            "example": "1.0.0"
        },
        "lastUpdated": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of last update"
        },
        "commands": {
            "type": "array",
            "description": "List of all available commands",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "domain",
                    "description",
                    "purpose"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Command name (kebab-case)",
                        "example": "project-manager"
                    },
                    "domain": {
                        "type": "string",
                        "description": "Command domain/category",
                        "enum": [
                            "life",
                            "planner",
                            "exec",
                            "analyzer",
                            "maker",
                            "research",
                            "notify",
                            "utils",
                            "podcast",
                            "expert"
                        ]
                    },
                    "description": {
                        "type": "string",
                        "description": "Brief description (1 sentence)",
                        "maxLength": 150
                    },
                    "purpose": {
                        "type": "string",
                        "description": "What this command does",
                        "enum": [
                            "create",
                            "analyze",
                            "plan",
                            "execute",
                            "research",
                            "notify",
                            "transform",
                            "manage"
                        ]
                    },
                    "inputs": {
                        "type": "array",
                        "description": "Expected input types",
                        "items": {
                            "type": "string",
                            "enum": [
                                "text",
                                "file",
                                "directory",
                                "json",
                                "query",
                                "none"
                            ]
                        }
                    },
                    "outputs": {
                        "type": "array",
                        "description": "Output types produced",
                        "items": {
                            "type": "string",
                            "enum": [
                                "file",
                                "report",
                                "notification",
                                "memory",
                                "trello",
                                "slack",
                                "none"
                            ]
                        }
                    },
                    "triggers": {
                        "type": "array",
                        "description": "When to use this command",
                        "items": {
                            "type": "string"
                        }
                    },
                    "dependencies": {
                        "type": "array",
                        "description": "Other commands that should run before this",
                        "items": {
                            "type": "string"
                        }
                    },
                    "related": {
                        "type": "array",
                        "description": "Related commands that might be useful",
                        "items": {
                            "type": "string"
                        }
                    },
                    "tags": {
                        "type": "array",
                        "description": "Tags for categorization",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "required": [
        "version",
        "lastUpdated",
        "commands"
    ]
}